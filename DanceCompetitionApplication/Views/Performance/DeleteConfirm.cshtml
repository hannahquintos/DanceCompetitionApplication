@model DanceCompetitionApplication.Models.PerformanceDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<a class="backLink" href="/Performance/Details/@Model.PerformanceId">< Back</a>

<h2>Are you sure you want to delete this performance?</h2>

<div class="detailsContainer">
    <p class="detailsInfo">Entry #@Model.PerformanceId</p>
    <h2 class="detailsInfo">@Model.RoutineName</h2>
    <div id="timeAndCategory">
        <p class="detailsInfo" id="timeBold">@Model.PerformanceTime.ToString("h:mm tt")</p>
        <p class="detailsInfo">@Model.CategoryName</p>
    </div>
</div>

<form action="/Performance/Delete/@Model.PerformanceId" method="POST">
        <input class="confirmDeleteBtn" type="submit" value="Confirm Delete" />
</form>