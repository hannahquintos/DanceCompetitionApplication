@model DanceCompetitionApplication.Models.DancerDto

@{
    ViewBag.Title = "Edit";
}

<script>
    //client side validation
    function validateDancerForm() {
        var validDancerData = true;

        var FirstName = document.getElementById("FirstName").value;
        var FirstNameError = document.getElementById("FirstNameError");

        if (FirstName === "") {
            FirstNameError.style.display = "block";
            validDancerData = false;
        } else {
            FirstNameError.style.display = "none";
        }

        var LastName = document.getElementById("LastName").value;
        var LastNameError = document.getElementById("LastNameError");

        if (LastName === "") {
            LastNameError.style.display = "block";
            validDancerData = false;
        } else {
            LastNameError.style.display = "none";
        }

        var DateOfBirth = document.getElementById("DateOfBirth").value;
        var DateOfBirthError = document.getElementById("DateOfBirthError");

        if (DateOfBirth === "") {
            DateOfBirthError.style.display = "block";
            validDancerData = false;
        } else {
            DateOfBirthError.style.display = "none";
        }

        if (validDancerData === false) {
            return false;
        } else {
            return true;
        }
    }
</script>

<a class="backLink" href="/Dancer/Details/@Model.DancerId">< Back</a>

<h2>Edit Dancer</h2>

<form action="/Dancer/Update/@Model.DancerId" method="POST" onsubmit="return validateDancerForm()">
    <!-- hidden input to send DancerId as part of POST information -->
    <input type="text" style="display:none;" name="DancerId" value="@Model.DancerId" />
    <div class="formInput">
        <p id="FirstNameError" style="display:none; color:red;">*Please enter a first name</p>
        <label>First Name</label>
        <input type="text" name="FirstName" value="@Model.FirstName" id="FirstName"/>
    </div>
    <div class="formInput">
        <p id="LastNameError" style="display:none; color:red;">*Please enter a last name</p>
        <label>Last Name</label>
        <input type="text" name="LastName" value="@Model.LastName" id="LastName"/>
    </div>
    <div class="formInput">
        <p id="DateOfBirthError" style="display:none; color:red;">*Please enter a date of birth</p>
        <label>Date of Birth</label>
        <input type="date" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" id="DateOfBirth"/>
    </div>
    <div>
        <input class="submitBtn" type="submit" value="Update" />
    </div>
</form>