@model DanceCompetitionApplication.Models.CategoryDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<a class="backLink" href="/Category/Details/@Model.CategoryId">< Back</a>

<h2>Are you sure you want to delete this category?</h2>

<div class="detailsContainer">
    <h2 class="detailsInfo">@Model.CategoryName</h2>
</div>

<form action="/Category/Delete/@Model.CategoryId" method="POST">
    <input class="confirmDeleteBtn" type="submit" value="Confirm Delete" />
</form>

